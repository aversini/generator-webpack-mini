{
  "name": "webpack-react-mini-testbed",
  "description": "Minimal testbed for React with webpack",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf build",
    "build:prod": "webpack --optimization-minimize --env=prod --progress --profile",
    "build": "npm-run-all --serial clean build:prod",
    "start": "webpack-dev-server --env=dev",
    "stats": "npm run clean && npm run build:prod && webpack -p --env=prod --json > build/stats.json && webpack-bundle-analyzer build/stats.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "7.14.7",
    "@babel/preset-env": "7.15.0",
    "@babel/preset-react": "7.14.5",
    "babel-loader": "8.2.2",
    "css-loader": "6.2.0",
    "html-webpack-plugin": "5.3.2",
    "mini-css-extract-plugin": "2.2.1",
    "npm-run-all": "4.1.5",
    "style-loader": "3.2.1",
    "url-loader": "4.1.1",
    "webpack": "5.51.1",
    "webpack-bundle-analyzer": "4.4.2",
    "webpack-cli": "4.8.0",
    "webpack-config-utils": "2.3.1",
    "webpack-dev-server": "4.1.0"
  }
}
