{
  "name": "webpack-react-mini-testbed",
  "description": "Minimal testbed for React with webpack",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf build",
    "serve": "webpack-dev-server --env=dev --open",
    "build:dev": "webpack --env=dev --progress --profile --colors",
    "build:prod": "webpack -p --env=prod --progress --profile --colors",
    "inline": "inliner build/index.html > build/index-inline.html",
    "build": "npm-run-all --serial clean build:prod inline",
    "start": "npm run serve",
    "dev": "npm run serve",
    "dist": "npm run build",
    "prod": "npm run build",
    "stats": "npm run clean && npm run build:prod && webpack -p --env=prod --json > build/stats.json && webpack-bundle-analyzer build/stats.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "html-webpack-plugin": "^3.2.0",
    "inliner": "^1.12.5",
    "mini-css-extract-plugin": "^0.4.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8",
    "webpack-config-utils": "^2.3.0",
    "webpack-dev-server": "^3.1.4"
  }
}
