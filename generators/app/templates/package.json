{
  "name": "webpack-react-mini-testbed",
  "description": "Minimal testbed for React with webpack",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf build",
    "serve": "webpack-dev-server --env=dev --open",
    "build:dev": "webpack --env=dev --progress --profile --colors",
    "build:prod": "webpack -p --env=prod --progress --profile --colors",
    "inline": "inliner build/index.html > build/index-inline.html",
    "build": "npm-run-all --serial clean build:prod inline",
    "start": "npm run serve",
    "dev": "npm run serve",
    "dist": "npm run build",
    "prod": "npm run build",
    "stats": "npm run clean && npm run build:prod && webpack -p --env=prod --json > build/stats.json && webpack-bundle-analyzer build/stats.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "babel-loader": "8.0.6",
    "css-loader": "3.1.0",
    "html-webpack-plugin": "3.2.0",
    "inliner": "1.13.1",
    "mini-css-extract-plugin": "0.8.0",
    "npm-run-all": "4.1.5",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "style-loader": "0.23.1",
    "url-loader": "2.1.0",
    "webpack": "4.36.1",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.3.6",
    "webpack-config-utils": "2.3.1",
    "webpack-dev-server": "3.7.2"
  }
}
